<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="SafeStreets.PastReportDetailPage"
             Title="Report Details"
             Padding="10">

    <ContentPage.ToolbarItems>
        <ToolbarItem
            Name="CloseModalItem"
            Activated="OnCloseModalClicked"
            Order="Primary"
            Priority="0"
            Text="Close" />
    </ContentPage.ToolbarItems>

    <ContentPage.Content>
        <StackLayout>
            <Label Text="Typology!" x:Name="xTypologyLabel" FontSize="Large" FontAttributes="Bold"/>
            <Label Text="Address!" x:Name="xAddressLabel"/>
            <Label Text="Datetime!" x:Name="xDateTimeLabel" />
        </StackLayout>
    </ContentPage.Content>
</ContentPage>