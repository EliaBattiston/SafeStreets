<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="SafeStreets.RestoreCredentialsPage"
             Title="Restore Credentials"
             Padding="10">

    <ContentPage.ToolbarItems>
        <ToolbarItem
            Name="CloseModalItem"
            Activated="OnCloseModalClicked"
            Order="Primary"
            Priority="0"
            Text="Close" />
    </ContentPage.ToolbarItems>

    <ContentPage.Content>
        <StackLayout>
            <Label Text="Insert your email address:" FontSize="Medium"/>
            <Entry Placeholder="Email" x:Name="xEmailEntry"/>
            <Button Text="Restore Credentials" Clicked="OnRestoreClicked" BackgroundColor="{StaticResource AttentionColor}" Margin="20" CornerRadius="10"/>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>