<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="SafeStreets.LogoutPage">
    <ContentPage.Content>
        <StackLayout VerticalOptions="Center">
            <Label Text="Logout from the application?"
                HorizontalOptions="CenterAndExpand"
                   FontSize="Large"
                   TextColor="Black"/>

            <Button Text="Logout"
                    BackgroundColor="{StaticResource AttentionColor}"
                    Clicked="OnBtnLogoutClicked"
                    Margin="20"
                    CornerRadius="10"/>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>